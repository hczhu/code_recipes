	name = HC Zhu
	email = hczhu.mtv@gmail.com

[credential]
  # helper = store --file /mnt/thumbdrive/.git-credentials
  helper = cache --timeout 3600

[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
